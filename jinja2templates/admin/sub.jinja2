{% extends "partals/base.jinja2" %}
{% block title %}Admin Stuff - {{sub}}{% endblock %}
{% block addhead %}
    <link rel="stylesheet" href="/admin/static/sub.css">
{% endblock %}
{% block content %}
{% if sub == "palyers" %}

{% elif sub == "spells" %}
<h3 class="title" style="margin: 4vw">Admin spell panel</h3>
<div class="container">
<div class="row">
    <div class="col-sm-3">
        <h3>Admin spells:</h3>
        <p>Much op</p>
        <ul class="nav nav-pills flex-column">
            <li class="nav-item">
                <a class="nav-link"><button class="btn btn-danger">Such op spell</button></a>
            </li>
            <li class="nav-item">
                <a class="nav-link"><button class="btn btn-warning">Instant death</button></a>
            </li>
        </ul>
    </div>
    <div id="spellMaker" class="col-sm-6">
        <h2>Spell maker</h2>
        <form id="newSpellForm" enctype="application/json">
            <div class="form-row">
                <div class="form-group">
                    <label for="target">
                    <input name="target" id="target" placeholder="Target" type="text" class="form-control">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="damage">
                    <input name="damage" id="damage" placeholder="HP affect" type="text" class="form-control">
                </div>
                <div class="form-group col-md-6">
                    <label for="mpburn">
                    <input name="mpburn" id="mpburn" placeholder="MP affect" type="text" class="form-control">
                </div>
            </div>
            <select id="spellFile" form="newSpellForm" class="form-control btn btn-primary">
{% for spellFile in spellFiles %}
                <option>{{spellFile}}</option>
{% endfor %}
            </select>
        </form>
    </div>
    <div class="col-sm-3">
        <h3>All Spells:</h3>
        <div class="spellsContainer">
{% for spell in db.s.find() %}
            <div>
                <h5>{{ spell['name'] }}</h5>
                <h6>Desctiption</h6><p>{{ spell['desc'] }}</p>
            </div>
{% endfor %}
        </div>
    </div>
</div>
</div>
{% else %}
<script>
window.location.replace("/admin")
</script>
{% endif %}
{% endblock %}
