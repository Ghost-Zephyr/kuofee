{% extends "partals/base.jinja2" %}
{% block title %}Home{% endblock %}
{% block addhead %}
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
{% endblock %}
{% block content %}
<div class="container">
<div class="row">
{% if player['admin'] %}
    <h1 class="title">Admin {{player['nick']}}</h1>
{% else %}
    <h1 class="title">Spellcaster {{player['nick']}}</h1>
{% endif %}
</div>
<div id="playerContent" class="row">
    <div class="col-sm-3">
        <h3>Options</h3>
        <ul class="nav nav-pills flex-column">
            <li class="nav-item">
                <a class="nav-link"><button id="playerOpt" class="btn btn-primary">Account</button></a>
            </li>
            <li class="nav-item">
                <a class="nav-link disable"><button class="btn btn-primary">I dunno</button></a>
            </li>
        </ul>
    </div>
    <div class="col-sm-6">
        <form id="updatePlayerForm" enctype="application/json" style="visibility: collapse">
            <div class="form-group">
                <label for="updatePlayerForm"><h3>Update player info<h3></label>
                <small class="form-text text-muted">Everything is optional except old password, just put in what you want to update!</small>
            </div>
            <div class="form-row">
                <label for="nick">
                <input placeholder="New nick" name="nick" type="username" class="form-control">
            </div>
            <div class="row">
                <div class="col">
                    <label for="pwd">
                    <input placeholder="Old password" name="pwd" type="password" class="from-control" required>
                </div>
                <div class="col">
                    <label for="npwd">
                    <input placeholder="New password" name="npwd" type="password" class="from-control">
                </div>
            </div>
            <div class="from-row" style="margin: 1vw;">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
        </form>
    </div>
    <div class="col-sm-3">
        <h3>Stats</h3>
        <p id="tmp"></p>
    </div>
</div>
<div style="margin-bottom: 7vw"></div>
</div>
{% endblock %}
{% block script %}
<script type="text/javascript" src="/static/player.js"></script>
{% endblock %}
