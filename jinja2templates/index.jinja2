<h1 class="title">Logged in as {{ player['nick'] }}!</h1>
<div style="margin-bottom: 10vw"></div>
{% else %}
<div class="container">
<div class="row">
    <div class="col-sm" style="text-align: center;">
        <h1><a href="/login" class="nav-link active">Login</a></h1>
    </div>
</div>
</div>
{% endif %}
{% endblock %}
